<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YummyZone" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/dark_orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/dark_orange</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Screen"><item name="android:background">@drawable/background</item></style>
    <style name="text"><item name="android:textColor">@color/light_black</item></style>
    <style name="subScreen"><item name="android:background">@drawable/profile_bachground</item></style>
    <style name="eidttext"><item name="android:background">@drawable/et_design_gray</item></style>
    <style name="eidttext2"><item name="android:background">@drawable/et_design_gray2</item></style>
    <style name="bar"><item name="android:background">@drawable/menu_bar_shape</item></style>
    <style name="infobackgrond"><item name="android:background">@drawable/infobackground</item></style>
    <style name="check_mark"><item name="android:background">@drawable/check_light</item></style>
    <style name="profile_squer"><item name="android:background">@drawable/profile_squer_light</item></style>
    <style name="dialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>
</resources>